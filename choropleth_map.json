{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "hconcat": [
        {
          "title": "World CO₂ Emissions Map",
          "width": 900,
          "height": 500,
          "projection": {
            "type": "equalEarth"
          },
          "layer": [
            {
              "data": {
                "url": "ne_110m_ocean.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_ocean"
                }
              },
              "mark": {
                "type": "geoshape",
                "fill": "skyblue"
              }
            },
            {
              "data": {
                "url": "ne_110m_graticules_30.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_graticules_30"
                }
              },
              "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
              }
            },
            {
              "data": {
                "url": "ne_110m_admin_0_countries.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "transform": [
                {
                  "lookup": "properties.ADMIN",
                  "from": {
                    "data": {
                      "url": "annual-co2-emissions-per-country.csv"
                    },
                    "key": "Country",
                    "fields": ["Annual CO2 emissions"]
                  }
                }
              ],
              "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
              },
              "encoding": {
                "color": {
                  "field": "Annual CO2 emissions",
                  "type": "quantitative",
                  "title": "Annual CO2 Emissions (tons)",
                  "scale": {
                    "type": "threshold",
                    "domain": [10000000, 20000000, 30000000, 40000000],
                    "range": ["#f7fbff", "#6baed6", "#2171b5", "#08306b"]
                  }
                },
                "tooltip": [
                  {
                    "field": "properties.ADMIN",
                    "type": "nominal",
                    "title": "Country"
                  },
                  {
                    "field": "Annual CO2 emissions",
                    "type": "quantitative"
                  }
                ]
              }
            }
          ]
        },
        {
          "title": "CO₂ Emissions by Country (Line Chart)",
          "width": 900,
          "height": 500,
          "data": {
            "url": "annual-co2-emissions-per-country.csv",
            "format": {"type": "csv"}
          },
          "mark": {
            "type": "line",
            "point": true,
            "tooltip": true
          },
          "encoding": {
            "x": {
              "field": "Year",
              "type": "temporal",
              "axis": {"title": "Year"}
            },
            "y": {
              "field": "Annual CO2 emissions",
              "type": "quantitative",
              "axis": {"title": "CO2 Emissions (tonnes)"}
            },
            "color": {
              "field": "Country",
              "type": "nominal",
              "legend": {"title": "Country"},
              "scale": {
                "scheme": "category20b"
              }
            },
            "tooltip": [
              {"field": "Country", "type": "nominal"},
              {"field": "Year", "type": "temporal"},
              {"field": "Annual CO2 emissions", "type": "quantitative"}
            ]
          },
          "selection": {
            "CountrySelector": {
              "type": "single",
              "fields": ["Country"],
              "bind": {
                "input": "select",
                "options": [
                  "United States", "China", "India", "Russia", "Germany", "Australia", 
                  "Canada", "Brazil", "United Kingdom", "France", "Japan", "South Korea", 
                  "Italy", "Mexico", "Indonesia", "Saudi Arabia", "South Africa", 
                  "Argentina", "Turkey", "Spain", "Netherlands", "Poland", "Thailand", 
                  "Malaysia"
                ],
                "name": "Select Country for Line Chart: "
              }
            }
          },
          "transform": [
            {
              "filter": {
                "param": "CountrySelector",
                "empty": false
              }
            }
          ]
        }
      ]
    },
    {
      "title": "CO₂ Emissions Per Capita by Country (Line Chart)",
      "width": 600,
      "height": 400,
      "data": {
        "url": "co-emissions-per-capita.csv"
      },
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {"title": "Year"}
        },
        "y": {
          "field": "Annual CO2 Emissions per Capita",
          "type": "quantitative",
          "axis": {"title": "CO₂ Emissions Per Capita (tonnes)"}
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "legend": {"title": "Country"}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Year", "type": "temporal"},
          {"field": "Emissions Per Capita", "type": "quantitative"}
        ]
      },
      "selection": {
        "CountrySelector": {
          "type": "single",
          "fields": ["Country"],
          "bind": {
            "input": "select",
            "options": ["United States", "China", "India", "Germany", "Russia"],
            "name": "Select Country: "
          }
        }
      }
    }
  ]
}
